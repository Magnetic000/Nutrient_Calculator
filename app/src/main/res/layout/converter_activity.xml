<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/color_primary"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch_button"
            android:padding="5dp"
            android:textColor="@color/text_primary"
            android:textSize="24dp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/input_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/switch_button"
            android:background="@android:drawable/btn_dropdown"
            android:padding="5dp"
            android:spinnerMode="dialog" />

        <EditText
            android:id="@+id/input_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_type"
            android:hint="Enter Amount"
            android:padding="5dp"
            android:textColor="@color/text_primary"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/convert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_amount"
            android:padding="5dp"
            android:text="Converts To:"
            android:textColor="@color/text_primary"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/output_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/convert"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/btn_dropdown"
            android:padding="5dp"
            android:spinnerMode="dialog" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/output_type"
            android:text="Test"
            android:padding="5dp"
            android:textColor="@color/text_primary"
            android:textSize="24dp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>